<?xml version="1.0" encoding="utf-8"?>
<edu.njau.SmartAgriculture.widgets.RecyclerRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:background="#fafafa"
            android:padding="8dp">
            <RelativeLayout
                android:id="@+id/rl_current_region"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/dra_rounded_corner_top"
                android:layout_alignParentTop="true"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前地区："
                    android:textSize="16sp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_gcfa_district"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="江苏里下河亚区"
                    android:layout_centerInParent="true"
                    android:textColor="@color/jiawa_main"/>
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:background="@mipmap/ic_location"
                    android:layout_marginTop="2dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_crop_type"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@drawable/dra_git_language_background"
                android:layout_below="@id/rl_current_region"
                android:padding="10dp"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="作物类型："
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <Spinner
                    android:id="@+id/sp_crop_type"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:dropDownVerticalOffset="33dp"
                    android:dropDownHorizontalOffset="20dp"
                    android:spinnerMode="dropdown"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_plant_type"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@drawable/dra_rounded_corner_bottom"
                android:layout_below="@id/ll_crop_type"
                android:padding="10dp"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/tv_dangqiandiqu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="栽种方式："
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/sp_plant_type"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:dropDownVerticalOffset="33dp"
                    android:dropDownHorizontalOffset="20dp"
                    android:spinnerMode="dropdown"
                    />
            </LinearLayout>
        </RelativeLayout>
        <View style="@style/sty_horizontal_line"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"/>
        <View style="@style/sty_horizontal_line"/>
    </LinearLayout>
</edu.njau.SmartAgriculture.widgets.RecyclerRefreshLayout>