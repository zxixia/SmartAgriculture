<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="7dp"
    android:paddingRight="7dp">
    <!--
        顶部公共的适宜品种
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@drawable/dra_rounded_corner_top">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="适宜品种"
            android:textStyle="bold"
            android:textSize="16sp"/>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_gcfa_suitable_crop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="水稻 中稻1号"
            android:textSize="16sp"/>
    </LinearLayout>
    <!--
    中间公共的部分
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:background="@drawable/dra_git_language_background">
        <!-- 当前类型信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_middle_current_type_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="当前生育期："
                android:textSize="16sp"
                android:layout_weight="3"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_middle_current_type_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="成熟期"
                android:textSize="16sp"
                android:layout_weight="5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="主茎叶龄期："
                android:textSize="16sp"
                android:layout_weight="3"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_leaf_age"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="16sp"
                android:layout_weight="5"/>
        </LinearLayout>
        <!-- 茎蘖消长动态 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="茎蘖消长动态："
                android:textSize="16sp"
                android:layout_weight="3"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_stem_growth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="成熟期亩穗数23-25万"
                android:textSize="16sp"
                android:layout_weight="5"/>
        </LinearLayout>
    </LinearLayout><!-- 中间公共部分 -->

    <ViewStub
        android:id="@+id/lay_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>